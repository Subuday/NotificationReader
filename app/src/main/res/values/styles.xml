<resources>

    <style name="Widget.NotificationReader.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Widget.NotificationReader.ShapableImageView.RoundedSquare" parent="">
        <item name="android:adjustViewBounds">true</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.RoundedSquare</item>
    </style>

    <style name="ShapeAppearance.RoundedSquare" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="MaterialAlertDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.RoundedMaterialAlertDialog</item>
    </style>

    <style name="ShapeAppearance.RoundedMaterialAlertDialog" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">8%</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">8%</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">8%</item>
    </style>

</resources>